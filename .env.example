# ─── Server ────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api/v1
LOG_LEVEL=info

# ─── Database ─────────────────────────────────────────────
DATABASE_URL=postgresql://vybe:vybe_secret@localhost:5432/vybe_dev?schema=public

# ─── Redis ────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── JWT ──────────────────────────────────────────────────
JWT_ACCESS_SECRET=change-me-to-a-long-random-string-at-least-32-chars
JWT_REFRESH_SECRET=change-me-to-another-long-random-string-at-least-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=30d

# ─── CORS ─────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ─── AWS S3 ───────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=vybe-marketplace-images
S3_PRESIGNED_URL_EXPIRATION=3600

# ─── Phone Auth (Twilio) ─────────────────────────────────
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_SERVICE_SID=your-twilio-verify-service-sid

# ─── Google OAuth ─────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id

# ─── Apple Sign-In ───────────────────────────────────────
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id

# ─── Push Notifications (Firebase) ───────────────────────
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ─── Rate Limiting ───────────────────────────────────────
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
